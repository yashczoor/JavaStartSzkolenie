<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.javastart.fxzdarzeniazadanie.controller.MainPaneController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <TextArea fx:id="txtAreaLeft" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <TextArea fx:id="txtAreaRight" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Button fx:id="btnClear" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clearAreas" text="Clear" />
   </children>
</VBox>
