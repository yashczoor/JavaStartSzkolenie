<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane BorderPane.alignment="CENTER"
	xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="pl.javastart.mp3player.controller.MenuPaneController">
	<children>
		<MenuBar AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<menus>
				<Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
					<items>
						<MenuItem fx:id="fileMenuItem" mnemonicParsing="false"
							text="Otwórz plik" />
						<MenuItem fx:id="dirMenuItem" mnemonicParsing="false"
							text="Otwórz folder" />
						<MenuItem fx:id="closeMenuItem" mnemonicParsing="false"
							text="Zamknij" />
					</items>
				</Menu>
				<Menu fx:id="aboutMenu" mnemonicParsing="false" text="Help">
					<items>
						<MenuItem fx:id="aboutMenuItem" mnemonicParsing="false"
							text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</children>
</AnchorPane>
