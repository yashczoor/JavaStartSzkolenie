			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="httpclient-cache-4.5.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="httpmime-4.5.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="fluent-hc-4.5.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-core-4.4.10-bin\httpcomponents-core-4.4.10\lib">
				<filename name="httpcore-4.4.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-core-4.4.10-bin\httpcomponents-core-4.4.10\lib">
				<filename name="httpcore-nio-4.4.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="commons-codec-1.10.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="httpclient-win-4.5.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="httpclient-4.5.6.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="commons-logging-1.2.jar"/>
			</fileset>
		</copy>
