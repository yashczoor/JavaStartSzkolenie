			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-client-4.5.6-bin\httpcomponents-client-4.5.6\lib">
				<filename name="jna-4.4.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-core-4.4.10-bin\httpcomponents-core-4.4.10\lib">
				<filename name="commons-cli-1.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="D:\Biblioteki JAVA\Apache HTTP\httpcomponents-core-4.4.10-bin\httpcomponents-core-4.4.10\lib">
				<filename name="httpcore-ab-4.4.10.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\Piotr Jaroszuk\javaFxTraining-workspace\Youtufy">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="httpclient-4.5.6.jar"/>
				<include name="httpclient-cache-4.5.6.jar"/>
				<include name="commons-codec-1.10.jar"/>
				<include name="httpmime-4.5.6.jar"/>
				<include name="jsoup-1.11.3.jar"/>
				<include name="commons-cli-1.2.jar"/>
				<include name="jna-platform-4.4.0.jar"/>
				<include name="fluent-hc-4.5.6.jar"/>
				<include name="httpclient-win-4.5.6.jar"/>
				<include name="httpcore-4.4.10.jar"/>
				<include name="httpcore-nio-4.4.10.jar"/>
				<include name="commons-logging-1.2.jar"/>
				<include name="jna-4.4.0.jar"/>
				<include name="httpcore-ab-4.4.10.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="10" target="10" srcdir="build/src" destdir="build/classes" encoding="Cp1250">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="Youtufy.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="Youtufy"
			mainClass=""
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/Youtufy.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Javastart"/>
				<attribute name="Implementation-Title" value="Youtufy"/>
				<attribute name="Implementation-Version" value="1"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="Youtufy" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="Youtufy" vendor="Javastart"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
